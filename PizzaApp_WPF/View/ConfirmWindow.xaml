<Window x:Class="PizzaApp_WPF.View.ConfirmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PizzaApp_WPF.View"
        xmlns:viewmodel="clr-namespace:PizzaApp_WPF.ViewModel"
        mc:Ignorable="d"
       Title="Customize the Pizza"
        Height="730" 
        Width="960"
        Icon="https://cdn.dribbble.com/users/242107/screenshots/5724354/_hot-line-set__gif.gif"
        Background="Black"
        BorderBrush="#FF3B5998"
        ResizeMode="NoResize"
        BorderThickness=".5"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <viewmodel:ModifyViewModel x:Key="vm"></viewmodel:ModifyViewModel>
    </Window.Resources>
    <Grid DataContext="{Binding Source={StaticResource vm}}">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="400"/>
            <RowDefinition Height="1*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        
        
        <TextBlock Background="#141414" Grid.Column="1" Text="Dine Order" FontSize="40" TextAlignment="Center" FontWeight="Bold" Foreground="White"/>


        <ListBox Background="#181818" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel Width="300">
                        <TextBlock Text="{Binding Path=Price}"  FontSize="40" Foreground="White" HorizontalAlignment="Right"/>
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Image Grid.Row="3" Grid.RowSpan="4" Grid.Column="0" Grid.ColumnSpan="3" Source="file:///C:/Users/Kevin/Desktop/WE/payment_logos_large.webp"/>






    </Grid>
</Window>
