<Window x:Class="PizzaApp_WPF.View.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PizzaApp_WPF.View"
        xmlns:viewmodel="clr-namespace:PizzaApp_WPF.ViewModel"
        xmlns:images="clr-namespace:PizzaApp_WPF"
        mc:Ignorable="d"
         Title="Customize the Pizza"
        Height="800" 
        Width="1040"
        Icon="https://cdn.dribbble.com/users/242107/screenshots/5724354/_hot-line-set__gif.gif"
        Background="Black"
        BorderBrush="#FF3B5998"
        ResizeMode="NoResize"
        BorderThickness=".5"
        WindowStartupLocation="CenterScreen" >
    <Window.Resources>
        <viewmodel:ModifyViewModel x:Key="vm"></viewmodel:ModifyViewModel>
    </Window.Resources>
    <StackPanel DataContext="{Binding Source={StaticResource vm}}">
        <!--de øverste elementer-->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label FontSize="40"
               FontWeight="Bold"
                   Foreground="White">
                <Underline>
                    Modificere din Pizza
                </Underline>
            </Label>
        </StackPanel>

        <!--Pizzas Beskrivelse-->
        <StackPanel>

            <TextBlock Name="PDesc_Tb"
                       Grid.Column="2"
                       FontSize="40"
                       Foreground="Wheat"
                       FontWeight="Bold"
                       Background="#181818"
                       TextTrimming="WordEllipsis"
                       TextWrapping="Wrap"
                       Padding="22"
                       Grid.Row="2">
            </TextBlock>
        </StackPanel>

        <!--Toppings liste og udvalgte-->
        <StackPanel>
            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Width="500">
                <ListBox Width="400" Background="#FF282828">
                    <CheckBox Content="sw" FontSize="33" Foreground="#FFF" Background="Red"/>
                </ListBox>
            </StackPanel>

            <StackPanel HorizontalAlignment="Right" >

                <Label Name="YourChosen_Lb"
                       Foreground="#FFFF"
                       FontSize="33"
                       FontWeight="Bold"
                       HorizontalContentAlignment="Center">
                    Dine Udvalgt
                </Label>

                <TextBlock Grid.Column="4"
                           Grid.Row="2"
                           FontSize="40"
                           Foreground="#61764B"
                           FontWeight="Bold"
                           Background="#282828"
                           TextTrimming="WordEllipsis"
                           TextWrapping="Wrap"
                           Padding="22"
                           Width="312">
                    Chosen Items Shows <LineBreak/> here with their prices
                </TextBlock>
                
                <TextBlock TextWrapping="Wrap"
                           FontWeight="Bold"
                           FontSize="30"
                           Foreground="White"
                           Background="#282828"
                           TextAlignment="Right"
                           Text="I Alt: "
                   >
                </TextBlock>
            </StackPanel>
        </StackPanel>


        <DockPanel>
            <StackPanel HorizontalAlignment="Left" Width="170" Height="170">
                <Button 
                Width="Auto"
                    Height="Auto"
                    Background="Transparent"
                    Command="{Binding BackCommand}">
                    <Image Source="/Image/vecteezy_delete-icon-no-sign-cancel-wrong-and-reject_.jpg" />
                </Button>
            </StackPanel>

            <StackPanel Width="200" HorizontalAlignment="Right" VerticalAlignment="Top">

                <Button HorizontalAlignment="Right" Width="170" Height="170" Background="Transparent">
                <Image Source="/Image/accept.png" />
            </Button>

            </StackPanel>
        </DockPanel>


    </StackPanel>
</Window>
