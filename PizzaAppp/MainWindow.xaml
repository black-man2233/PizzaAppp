<Window x:Class="PizzaAppp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PizzaAppp"
        mc:Ignorable="d"
        Title="Home" Height="450" Width="800"
        ResizeMode="NoResize"
        Background="#d9b030"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="102"
                            Background="#e1b623"
                            BorderThickness="1">
                            <ContentPresenter
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="{TemplateBinding Padding}" ></ContentPresenter>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#000" Margin="4">
        <!--Definere antal af de horizontale rækker-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        
        <!--Definere antal af de vertikale rækker-->
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <!--Logoen til appen-->
        <Image Name="Logo"
                Source="https://sason.dk/image/272" 
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               Width="250" Margin="271,10,0,0"/>

        <!--Menu kortets label-->
        <Label Content="Menu"
               Foreground="#e1b623"
               FontSize="35"
               FontFamily="Arial Black"
               VerticalContentAlignment="Bottom"
               />
        
        <!--Indkøbskurv label-->
        <Label Content="Indkøbskurv"
               Foreground="#e1b623"
               FontSize="35"
               FontFamily="Arial Black"
               VerticalContentAlignment="Bottom"
                       Grid.Column="2"
               />
        
        <!--Menukortets ListBoxen-->
        <ListBox Name="Menu_lB"
                 Margin="10,0,115,10"
                 Grid.RowSpan="3"
                 Grid.Row="1">
            Menu kort
        </ListBox>

        <!--Indkæbskurvens ListBoxen-->
        <ListBox Name="Cart_lB"  
                 Grid.Row="1" Grid.Column="1"
                 Height="Auto" Margin="0,0,0,59" Grid.RowSpan="2">
            Indkøbes Vogn
        </ListBox>

        <!--Den samlede pris af indkøbskruvens indhold-->
        <Label Name="TotalPrice_lb"
               Content="Pris i alt"
               FontFamily="Arial"
               FontSize=" 30"
               FontWeight="DemiBold"
               Grid.Column="2"
               Grid.Row="2"
               Foreground="#e1b623"
               HorizontalContentAlignment="Right"
               VerticalContentAlignment="Bottom"/>

        <!--Knappen der overføre til betalinges vindue-->
        <Button Name="ToPayment_bt"
                Content="Til Betaling"
                FontFamily="Arial"
                FontSize=" 30"
                FontWeight="DemiBold"
                Grid.Column="2"
                Grid.Row="3"
                Margin="23"/>


    </Grid>
</Window>  